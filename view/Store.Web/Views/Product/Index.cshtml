@model Product

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<p><strong>@Model.Information</strong></p>
<p>Производитель<strong>@Model.Company</strong></p>
<p>Цена<strong>@Model.Price</strong></p>
<form action="@Url.Action("Add","Cart")" method="post">
    <input type="hidden" name="id" value="@Model.Id"/>
    <button class="btn btn-outline-success" type="submit">В корзину</button>
</form>